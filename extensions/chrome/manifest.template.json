{
  "manifest_version": 3,
  "name": "Currently Creator Tools",
  "version": "0.1.0",
  "description": "Tools for Currently creators",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Currently Creator Tools",
    "default_popup": "popup.html"
  },
  "permissions": [
    "offscreen",
    "storage",
    "tabs",
    "scripting",
    "cookies",
    "notifications"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://livestreaming.tools/*",
    "http://localhost:3000/*",
    "http://localhost/*",
    "https://open.spotify.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://livestreaming.tools/*",
      "http://localhost:3000/*",
      "http://localhost/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://livestreaming.tools/*",
        "http://localhost:3000/*",
        "http://localhost/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "dist/config.js",
        "dist/popup.css",
        "offscreen.js",
        "offscreen-init.js",
        "offscreen-ready.js",
        "reload-script.js",
        "offscreen.html",
        "icon-generator.js",
        "images/bg.webp",
        "init.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
