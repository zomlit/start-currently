{
  "name": "lst-start",
  "private": true,
  "prisma": {
    "schema": "backend/prisma/schema.prisma"
  },
  "workspaces": [
    "web",
    "backend",
    "shared",
    "native",
    "extensions/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "cd web && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:native": "cd native && bun run tauri dev",
    "build": "turbo run build",
    "build:web": "cd web && bun run build",
    "build:backend": "cd backend && bun run build",
    "build:native": "cd native && bun run tauri build",
    "build:extensions": "cd extensions/chrome && bun run build",
    "generate-types": "turbo run generate-types",
    "generate:prisma": "cd backend && prisma generate",
    "generate:supabase": "supabase gen types typescript --project-id aliddllzqrcpzhiouryw > web/app/types/supabase.ts",
    "test": "turbo run test",
    "test:web": "cd web && bun run test",
    "test:backend": "cd backend && bun run test",
    "test:native": "cd native && bun run test",
    "prisma:generate": "cd backend && prisma generate",
    "prisma:push": "cd backend && prisma db push",
    "prisma:pull": "cd backend && prisma db pull",
    "prisma:studio": "cd backend && prisma studio",
    "prisma:format": "cd backend && prisma format",
    "prisma:migrate": "cd backend && prisma migrate dev",
    "setup": "bun install && mkdir -p .husky && bunx husky install && bunx husky add .husky/pre-commit \"bun run pre-commit\"",
    "pre-commit": "bun run generate-types && git add web/app/types/supabase.ts || true",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.3"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "husky": "^9.1.7",
    "react": "^19.0.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "tailwindcss-spring": "^1.0.1"
  },
  "packageManager": "bun@1.0.26"
}
